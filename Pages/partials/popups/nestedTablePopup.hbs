{{! views/partials/popups/nestedTablePopup.hbs }}

<style>
    /* Add to your CSS */
#nestedPagination {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px;
    background: #f5f5f5;
    border-top: 1px solid #ddd;
}

#nestedPagination .rows-per-page {
    display: flex;
    align-items: center;
    gap: 5px;
}

#nestedPagination .pagination {
    display: flex;
    gap: 5px;
}

#nestedPagination .page-btn {
    padding: 5px 10px;
    border: 1px solid #ddd;
    background: white;
    cursor: pointer;
}

#nestedPagination .page-btn.active {
    background: #007bff;
    color: white;
    border-color: #007bff;
}

#nestedPagination .page-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}
</style>
<div class="popup" id="popup">
    <span class="close-btn" onclick="closePopup()">✖</span>
    <h2>Nested Table</h2>
    
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th><input type="checkbox"></th>
                    <th>Category</th>
                    <th>Sub Category</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody id="nested-table-body">
                {{! Content will be populated dynamically }}
            </tbody>
        </table>
    </div>
    
    {{! Add pagination controls for nested table }}
    <div class="pagination-controls" id="nestedPagination">
        <div class="rows-per-page">
            <label>Rows:</label>
            <select id="nestedRowsPerPage" onchange="changeNestedRowsPerPage(this.value)">
                <option value="5">5</option>
                <option value="10" selected>10</option>
                <option value="20">20</option>
            </select>
        </div>
        <div class="pagination" id="nestedPaginationButtons"></div>
    </div>
</div>
